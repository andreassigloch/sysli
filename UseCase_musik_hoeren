// Andreas Sigloch
// AI generated example of an Usecase

(U: UC {UCName: "MusikHören", UCDescr: "Der Benutzer kann im Auto Musik hören, indem er das Audiosystem des Fahrzeugs verwendet. Der Benutzer kann Musikquellen auswählen, die Lautstärke anpassen und die Wiedergabe steuern."})
(A: ACTOR {ActName: "Benutzer", ActDescr: "Die Person, die im Auto Musik hören möchte."})
(F1: FUNC {FuncName: "Musikquelle auswählen", FuncDescr: "Der Benutzer kann die Musikquelle (Radio, Bluetooth, USB, CD, Streaming-Dienste) innerhalb von 2 Sekunden auswählen."})
(F2: FUNC {FuncName: "Lautstärke anpassen", FuncDescr: "Der Benutzer kann die Lautstärke des Audiosystems in 1 dB-Schritten erhöhen oder verringern."})
(F3: FUNC {FuncName: "Wiedergabe steuern", FuncDescr: "Der Benutzer kann die Musikwiedergabe starten, pausieren, einen Titel innerhalb von 1 Sekunde überspringen oder zurückgehen."})
(F4: FUNC {FuncName: "Audio ausgeben", FuncDescr: "Das Audiosystem gibt die ausgewählte Musikquelle mit einer Abtastrate von 44,1 kHz und einer Bitrate von 16 Bit wieder. Die Verzögerung der Audioausgabe muss kleiner als 0,2 Sekunden sein."})
(R1: REQ {ReqName: "Schnelle Quelleauswahl", ReqDescr: "Die Musikquelle muss innerhalb von 2 Sekunden ausgewählt werden können."})
(R2: REQ {ReqName: "Präzise Lautstärkeregelung", ReqDescr: "Die Lautstärke muss in 1 dB-Schritten eingestellt werden können."})
(R3: REQ {ReqName: "Reaktionsfähige Steuerung", ReqDescr: "Die Wiedergabe-Steuerungsfunktionen müssen innerhalb von 1 Sekunde auf Benutzereingaben reagieren."})
(R4: REQ {ReqName: "Hochwertige Audioausgabe", ReqDescr: "Die Audioausgabe muss in einer Abtastrate von 44,1 kHz und einer Bitrate von 16 Bit erfolgen und die Verzögerung der Audioausgabe muss kleiner als 0,2 Sekunden sein."})

(U)-[:needs]->(F1)
(U)-[:needs]->(F2)
(U)-[:needs]->(F3)
(U)-[:needs]->(F4)
(F1)-[:has_relation {RelData: "Ausgewählte Quelle"}]->(F4)
(F2)-[:has_relation {RelData: "Lautstärkepegel"}]->(F4)
(F3)-[:has_relation {RelData: "Wiedergabe-Status"}]->(F4)
(A)-[:interacts {IntData: "Quelle auswählen"}]->(F1)
(A)-[:interacts {IntData: "Lautstärke einstellen"}]->(F2)
(A)-[:interacts {IntData: "Wiedergabe steuern"}]->(F3)
(F4)-[:interacts {IntData: "Musik wiedergeben"}]->(A)
(R1)-[:specifies]->(F1)
(R2)-[:specifies]->(F2)
(R3)-[:specifies]->(F3)
(R4)-[:specifies]->(F4)
(TEST: Quelleauswahl-Test)-[:validates]->(R1)
(TEST: Lautstärkeregelung-Test)-[:validates]->(R2)
(TEST: Steuerungsreaktions-Test)-[:validates]->(R3)
(TEST: Audioqualität-Test)-[:validates]->(R4)
